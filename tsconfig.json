{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2022", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitThis": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@tylertech/forge": ["src/lib"],
      "@tylertech/forge/*": ["src/lib/*"]
    },
    "types": ["node", "mocha", "sinon", "chai"]
  },
  "exclude": ["node_modules", "dist", "auto.config.ts", "docs"]
}

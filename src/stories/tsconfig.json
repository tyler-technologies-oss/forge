{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "es2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tylertech/forge": ["../lib"]
    }
  }
}

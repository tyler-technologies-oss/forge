{
  "extends": "./lib/tsconfig-build.json",
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "pretty": true,
    "suppressImplicitAnyIndexErrors": true,
    "useDefineForClassFields": false,
    "types": [
      "jasmine",
      "node",
      "webpack-env"
    ],
    "baseUrl": ".",
    "paths": {
      "@tylertech/forge": ["lib"],
      "@tylertech/forge/*": ["lib/*"]
    }
  },
  "exclude": ["dev", "stories"]
}

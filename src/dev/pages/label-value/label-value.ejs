<div class="vert">
  <!-- Basic -->
  <section> 
    <forge-label-value>
      <span slot="label">Status</span>
      <span slot="value">Active</span>
    </forge-label-value>
  </section>

  <!-- w/Icon-->
  <section> 
    <forge-label-value>
      <forge-icon slot="icon" name="info_outline"></forge-icon>
      <span slot="label">Status</span>
      <span slot="value">Active</span>
    </forge-label-value>
  </section>

  <!-- Inline -->
  <section> 
    <forge-label-value inline>
      <span slot="label">Status</span>
      <span slot="value">Active</span>
    </forge-label-value>
  </section>

  <!-- Inline w/Icon-->
  <section> 
    <forge-label-value inline>
      <forge-icon slot="icon" name="info_outline"></forge-icon>
      <span slot="label">Status</span>
      <span slot="value">Active</span>
    </forge-label-value>
  </section>

  <!-- Empty -->
  <section> 
    <forge-label-value empty>
      <span slot="label">Status</span>
      <span slot="value">n/a</span>
    </forge-label-value>
  </section>

  <!-- Ellipsis (overflowing text)-->
  <section> 
    <div style="max-width: 150px;">
      <forge-label-value ellipsis>
        <span slot="label">Status</span>
        <span slot="value">Lorem ipsum dolor sit, amet consectetur adipisicing elit.</span>
      </forge-label-value>
    </div>
  </section>

  <!-- w/Long value -->
  <section> 
    <forge-label-value>
      <span slot="label">Status</span>
      <span slot="value">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sapiente, ducimus ad ab dolore, quae commodi aliquam incidunt quibusdam illo amet repudiandae provident aspernatur perspiciatis quas accusantium eius doloremque, dignissimos quisquam.</span>
    </forge-label-value>
  </section>

  <!-- w/Long label -->
  <section> 
    <forge-label-value>
      <span slot="label">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Qui ipsum aspernatur at. Eligendi amet aperiam, molestias aliquid expedita incidunt! Debitis ex ut rerum officiis deleniti adipisci, saepe eius quia quas.</span>

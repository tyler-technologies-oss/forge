<div class="skip-link-demo">
  <section>
    <h3>Default</h3>
    <div tabindex="0">Tab past this</div>
    <forge-skip-link id="skip-link" target="main"></forge-skip-link>
    <div tabindex="-1" id="main" class="target-content">Main content</div>
  </section>
  <section>
    <h3>CSS only</h3>
    <div tabindex="0">Tab past this</div>

<div class="vert">
  <div>
    <h3 class="forge-typography--heading2">Default</h3>
    <forge-field>
      <label slot="label">Label</label>
      <input type="text" value="Content" />
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">CSS-only</h3>
    <label for="my-css-only-input" class="forge-field__label">Label</label>
    <div class="forge-field">
      <forge-icon name="favorite" class="forge-field__start"></forge-icon>
      <input type="text" id="my-css-only-input" placeholder="Content">
      <forge-icon name="favorite" class="forge-field__end"></forge-icon>
    </div>
    <span class="forge-field__support-text">Example of some support text</span>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Two inputs</h3>
    <forge-field>
      <forge-label>Label</forge-label>
      <input type="text" value="Content" aria-label="Start" />
      <input type="text" value="Content" aria-label="End" />
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Label block start</h3>
    <forge-field label-position="block-start">
      <label slot="label">Label</label>
      <input type="text" value="Content" />
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Label inline start</h3>
    <forge-field label-position="inline-start">
      <label slot="label">Label</label>
      <input type="text" value="Content" />
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Label inline end</h3>
    <forge-field label-position="inline-end">
      <label slot="label">Label</label>
      <input type="text" value="Content" />
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Label inset</h3>
    <forge-field label-position="inset">
      <label slot="label">Label</label>
      <input type="text" value="" />
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Label none</h3>
    <forge-field label-position="none">
      <label slot="label">Label</label>
      <input type="text" value="Content" />
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Multiline field</h3>
    <forge-field label-position="none" multiline>
      <label slot="label">Label</label>
      <textarea>Content</textarea>
    </forge-field>
  </div>

  <div>
    <h3 class="forge-typography--heading2">Multiline field, inset label</h3>
    <forge-field id="inset-multiline-field" label-position="inset" multiline>
      <label slot="label">Label</label>
      <textarea></textarea>
    </forge-field>
  </div>
</div>


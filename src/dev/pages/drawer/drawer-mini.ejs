<h3 class="forge-typography--subtitle1">Mini</h3>
<div class="drawer-demo" style="position: relative;">
  <forge-scaffold stretch>
    <forge-app-bar id="drawer-mini-app-bar" title-text="Mini Drawer" slot="header">
      <forge-icon slot="logo" name="forge_logo"></forge-icon>
    </forge-app-bar>
    <forge-toolbar slot="body-header">
      <div slot="start">Toolbar</div>
    </forge-toolbar>
    <forge-mini-drawer slot="body-left">
      <forge-list>
        <forge-list-item selected="true" id="tooltip-host-1">
          <forge-icon slot="leading" name="inbox"></forge-icon>
          Inbox
        </forge-list-item>
        <forge-list-item id="tooltip-host-2">
          <forge-icon slot="leading" name="send"></forge-icon>
          Outgoing
        </forge-list-item>
        <forge-list-item id="tooltip-host-3">
          <forge-icon slot="leading" name="drafts"></forge-icon>
          Drafts
        </forge-list-item>
        <forge-tooltip target="#tooltip-host-1">Inbox</forge-tooltip>
        <forge-tooltip target="#tooltip-host-2">Sent</forge-tooltip>
        <forge-tooltip target="#tooltip-host-3">Drafts</forge-tooltip>
      </forge-list>
    </forge-mini-drawer>
    <div slot="body" style="padding: 16px;">
      <forge-card outlined>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit,

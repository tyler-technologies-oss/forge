  <!-- End icons -->
  <section>
    <h3 class="forge-typography--heading2">With end icon</h3>
    <forge-chip-set type="filter">
      <forge-chip selected>
        Alice
        <forge-icon slot="end" name="account"></forge-icon>
      </forge-chip>
      <forge-chip selected>
        Bob
        <forge-icon slot="end" name="account"></forge-icon>
      </forge-chip>
      <forge-chip>
        Charlie
        <forge-icon slot="end" name="account"></forge-icon>
      </forge-chip>
      <forge-chip>
        Danielle
        <forge-icon slot="end" name="account"></forge-icon>
      </forge-chip>
    </forge-chip-set>

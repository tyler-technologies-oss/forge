  <!-- End avatar -->
  <section>
    <h3 class="forge-typography--heading2">With end avatar</h3>
    <forge-chip-set>
      <forge-chip value="calendar">
        Add to calendar
        <forge-avatar slot="end" text="Tyler Forge"></forge-avatar>
      </forge-chip>
      <forge-chip value="bookmark">
        Bookmark
        <forge-avatar slot="end" text="Tyler Forge"></forge-avatar>

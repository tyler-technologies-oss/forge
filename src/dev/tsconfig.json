{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "useDefineForClassFields": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@tylertech/forge": ["../lib/index.ts"],
      "@tylertech/forge/*": ["../lib/*"],
      "$src/*": ["./src/*"]
    }
  },
  "include": ["src", "pages"]
}

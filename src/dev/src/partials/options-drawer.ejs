<aside slot="body-left">
  <forge-drawer>
    <forge-toolbar slot="header">
      <h2 slot="start" class="forge-typography--heading1">Options</h2>
    </forge-toolbar>
    <div class="options-container">
      <% controls.forEach(control => { %>
        <% if (control.type === 'checkbox') { %>
          <%- include('controls/checkbox.ejs', { control }); %>
        <% } else if (control.type === 'switch') { %>
          <%- include('controls/switch.ejs', { control }); %>
        <% } else if (control.type === 'text-field') { %>
          <%- include('controls/text-field.ejs', { control }); %>
        <% } else if (control.type === 'select') { %>
          <%- include('controls/select.ejs', { control }); %>
        <% } else if (control.type === 'time-picker') { %>
          <%- include('controls/time-picker.ejs', { control }); %>
        <% } else if (control.type === 'radiogroup') { %>
          <%- include('controls/radiogroup.ejs', { control }); %>
        <% } else if (control.type === 'button') { %>
          <%- include('controls/button.ejs', { control }); %>
        <% } else if (control.type === 'custom') { %>
          <%- control.render() %>
        <% } %>
      <% }); %>
    </div>
  </forge-drawer>
</aside>

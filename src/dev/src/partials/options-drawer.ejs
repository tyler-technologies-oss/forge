<forge-drawer slot="body-left">
  <aside>
    <forge-toolbar>
      <h3 slot="start" class="forge-typography--subtitle1-secondary">Options</h3>
    </forge-toolbar>
    <div class="options-container">
      <% controls.forEach(control => { %>
        <% if (control.type === 'checkbox') { %>
          <%- include('controls/checkbox.ejs', { control }); %>
        <% } else if (control.type === 'text-field') { %>
          <%- include('controls/text-field.ejs', { control }); %>
        <% } else if (control.type === 'select') { %>
          <%- include('controls/select.ejs', { control }); %>
        <% } %>
      <% }); %>
    </div>
  </aside>
</forge-drawer>
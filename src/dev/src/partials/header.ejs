<forge-app-bar slot="header" id="page-app-bar">
  <a slot="title" href="/">
    <h1 class="forge-typography--headline5"><%= site.title %><%= title ? ` - ${title}` : null %></h1>
    <forge-ripple></forge-ripple>
  </a>
  <forge-icon name="forge_logo" slot="logo"></forge-icon>
  <forge-icon-button slot="end">
    <button type="button" id="dark-theme-button">
      <forge-icon name="brightness_3"></forge-icon>
    </button>
    <forge-tooltip position="bottom-end">Toggle theme</forge-tooltip>
  </forge-icon-button>
</forge-app-bar>

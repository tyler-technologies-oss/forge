{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "es2017"],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false
  }
}
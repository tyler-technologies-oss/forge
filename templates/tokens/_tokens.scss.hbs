@use 'sass:map';
@use '../../animation';
@use '../../shape';
@use '../../spacing';
@use '../../theme';
@use '../../utils';

$tokens: (
  background: utils.module-val({{dashCase name}}, background, theme.variable(primary-container)),
  color: utils.module-val({{dashCase name}}, color, theme.variable(on-primary-container)),
  transition-duration: utils.module-val({{dashCase name}}, transition-duration, animation.variable(duration-short4)),
  transition-timing: utils.module-val({{dashCase name}}, transition-timing, animation.variable(easing-standard)),
  shape: utils.module-val({{dashCase name}}, shape, shape.variable(medium)),
  padding: utils.module-val({{dashCase name}}, padding, spacing.variable(medium)),
) !default;

@function get($key) {
  @return map.get($tokens, $key);
}

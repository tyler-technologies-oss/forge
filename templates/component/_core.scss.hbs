@use './token-utils' as *;

@forward './token-utils';

@mixin host() {
  // Styles for the host element
  display: inline flex;
}

@mixin base() {
  // Base styles for the internal root element
  background: #{token(background)};
  color: #{token(color)};
  border-radius: #{token(shape)};
  padding: #{token(padding)}
}

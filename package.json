{
  "name": "@tylertech/forge",
  "version": "2.22.1",
  "description": "Tyler Forgeâ„¢ Web Components library",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "keywords": [
    "tyler forge",
    "web components",
    "custom elements"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tyler-technologies-oss/forge.git"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "cd src/stories && npm install",
    "build": "forge build",
    "start": "vite serve src/dev",
    "storybook": "cd src/stories && npm start",
    "lint": "forge lint",
    "test": "wtr --coverage --watch --group lib",
    "test:playwright": "wtr --watch --group lib --playwright --browsers chromium webkit firefox",
    "test:focus": "wtr --coverage --watch --group",
    "test:ci": "wtr --group lib",
    "test:forge": "forge test",
    "ci:test": "npm run test:ci && npm run ci:test:forge",
    "ci:test:forge": "forge test --once --ci --no-coverage",
    "ci:build-storybook": "cd src/stories && npm run ci:build",
    "ci:package": "tar -czvhf dist/deployment-assets.tar.gz -C dist/cdn .",
    "serve:coverage": "http-server -c 1 -o -p 9875 dist/coverage/html",
    "release": "auto shipit",
    "postversion": "cd dist/release/@tylertech/forge && npm version $npm_package_version --no-git-tag-version --no-commit-hooks --ignore-scripts"
  },
  "dependencies": {
    "@floating-ui/dom": "~1.5.3",
    "@tylertech/forge-core": "^2.3.1",
    "@tylertech/tyler-icons": "^1.12.0",
    "imask": "^6.6.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.1.6",
    "@auto-it/first-time-contributor": "^11.1.6",
    "@auto-it/npm": "^11.1.6",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "3.1.8",
    "@tylertech-eslint/eslint-plugin": "^1.0.12",
    "@tylertech/forge-cli": "^3.0.0-next.6",
    "@tylertech/forge-testing": "^2.0.0",
    "@tylertech/stylelint-rules": "^5.1.0",
    "@types/jasmine": "^5.1.4",
    "@types/karma": "^6.3.8",
    "@types/karma-fixture": "^0.2.8",
    "@types/node": "^20.12.7",
    "@types/webpack-env": "^1.18.4",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/dev-server-rollup": "^0.6.1",
    "@web/test-runner": "0.16.1",
    "@web/test-runner-junit-reporter": "^0.7.1",
    "@web/test-runner-playwright": "^0.11.0",
    "auto": "^11.1.6",
    "commitlint": "^19.3.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "karma-fixture": "^0.2.6",
    "rollup-plugin-scss": "^4.0.0",
    "sinon": "^15.2.0",
    "stylelint": "^16.4.0",
    "typescript": "~5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-full-reload": "^1.1.0",
    "vite-plugin-inspect": "^0.8.4",
    "vite-tsconfig-paths": "^4.3.2"
  }
}

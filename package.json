{
  "name": "@tylertech/forge",
  "version": "3.0.0",
  "description": "Tyler Forgeâ„¢ Web Components library",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "keywords": [
    "tyler forge",
    "web components",
    "custom elements"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyler-technologies-oss/forge.git"
  },
  "scripts": {
    "prepare": "husky",
    "build": "forge build",
    "start": "vite serve src/dev",
    "prestorybook": "npm run cem",
    "storybook": "storybook dev -p 6006",
    "prebuild-storybook": "npm run cem",
    "build-storybook": "storybook build",
    "lint": "forge lint",
    "test": "wtr --coverage --watch --group lib",
    "test:playwright": "wtr --watch --group lib --playwright --browsers chromium webkit firefox",
    "test:focus": "wtr --coverage --watch --group",
    "test:ci": "wtr --group lib",
    "test:forge": "forge test",
    "ci:test": "npm run test:ci && npm run ci:test:forge",
    "ci:test:forge": "forge test --once --ci --no-coverage",
    "ci:package": "tar -czvhf dist/deployment-assets.tar.gz -C dist/cdn .",
    "serve:coverage": "http-server -c 1 -o -p 9875 dist/coverage/html",
    "release": "auto shipit",
    "cem": "custom-elements-manifest analyze --config custom-elements-manifest.config.mjs --outdir dist/cem",
    "postversion": "cd dist/release/@tylertech/forge && npm version $npm_package_version --no-git-tag-version --no-commit-hooks --ignore-scripts",
    "prettier": "prettier --write \"**/*.{ts,js,html,md,mdx,css,scss,yaml,json}\"",
    "prettier:check": "prettier --check \"**/*.{ts,js,html,md,mdx,css,scss,yaml,json}\""
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.5",
    "@tylertech/forge-core": "^3.0.0",
    "@tylertech/tyler-icons": "^1.12.0",
    "imask": "^6.6.1",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.1.6",
    "@auto-it/first-time-contributor": "^11.1.6",
    "@auto-it/npm": "^11.1.6",
    "@chromatic-com/storybook": "^1.5.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "3.1.8",
    "@storybook/addon-a11y": "^8.1.7",
    "@storybook/addon-essentials": "^8.1.7",
    "@storybook/addon-links": "^8.1.7",
    "@storybook/addon-measure": "^8.1.7",
    "@storybook/addon-themes": "^8.1.7",
    "@storybook/addon-viewport": "^8.1.7",
    "@storybook/blocks": "^8.1.7",
    "@storybook/manager-api": "^8.1.7",
    "@storybook/test": "^8.1.7",
    "@storybook/theming": "^8.1.7",
    "@storybook/web-components": "^8.1.7",
    "@storybook/web-components-vite": "^8.1.7",
    "@tylertech-eslint/eslint-plugin": "^1.0.12",
    "@tylertech/forge-cli": "^3.0.1",
    "@tylertech/stylelint-rules": "^5.1.0",
    "@types/cssbeautify": "^0.3.5",
    "@types/jasmine": "^5.1.4",
    "@types/karma": "^6.3.8",
    "@types/karma-fixture": "^0.2.8",
    "@types/node": "^20.14.2",
    "@types/webpack-env": "^1.18.5",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/dev-server-rollup": "^0.6.1",
    "@web/test-runner": "0.16.1",
    "@web/test-runner-junit-reporter": "^0.7.1",
    "@web/test-runner-playwright": "^0.11.0",
    "auto": "^11.1.6",
    "cem-plugin-custom-jsdoc-tags": "^1.1.1",
    "commitlint": "^19.3.0",
    "cssbeautify": "^0.3.1",
    "custom-element-vs-code-integration": "^1.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-prettier": "^5.1.3",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "karma-fixture": "^0.2.6",
    "lint-staged": "^15.2.5",
    "lit": "^3.1.4",
    "prettier": "3.3.1",
    "remark-gfm": "^4.0.0",
    "rollup-plugin-scss": "^4.0.0",
    "sinon": "^15.2.0",
    "storybook": "^8.1.7",
    "storybook-dark-mode": "^4.0.1",
    "stylelint": "^16.6.1",
    "stylelint-config-prettier": "^9.0.5",
    "typescript": "~5.4.5",
    "vite": "^5.2.13",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-full-reload": "^1.1.0",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "overrides": {
    "@typescript-eslint/typescript-estree": "^7.12.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}

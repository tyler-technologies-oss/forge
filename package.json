{
  "name": "@tylertech/forge",
  "version": "2.21.3",
  "description": "Tyler Forgeâ„¢ Web Components library",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "keywords": [
    "tyler forge",
    "web components",
    "custom elements"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tyler-technologies-oss/forge.git"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "cd src/stories && npm install",
    "build": "forge build",
    "start": "vite serve src/dev",
    "storybook": "cd src/stories && npm start",
    "lint": "forge lint",
    "test": "web-test-runner --coverage --watch --group lib",
    "test:playwright": "web-test-runner --watch --group lib --playwright --browsers chromium webkit firefox",
    "test:focus": "web-test-runner --coverage --watch --group",
    "test:ci": "web-test-runner --group lib",
    "test:forge": "forge test",
    "ci:test": "npm run test:ci && npm run ci:test:forge",
    "ci:test:forge": "forge test --once --ci --no-coverage",
    "ci:build-storybook": "cd src/stories && npm run ci:build",
    "ci:package": "tar -czvhf dist/deployment-assets.tar.gz -C dist/cdn .",
    "serve:coverage": "http-server -c 1 -o -p 9875 dist/coverage/html",
    "changelog": "auto changelog",
    "release": "auto shipit",
    "postversion": "cd dist/release/@tylertech/forge && npm version $npm_package_version --no-git-tag-version --no-commit-hooks --ignore-scripts",
    "outdated-deps": "npm-check-updates --format repo --peer",
    "update-deps": "npm-check-updates --peer -u && npm install && npm run lint"
  },
  "dependencies": {
    "@floating-ui/dom": "~1.5.3",
    "@material/animation": "^14.0.0",
    "@material/button": "^14.0.0",
    "@material/card": "^14.0.0",
    "@material/checkbox": "^14.0.0",
    "@material/chips": "^14.0.0",
    "@material/drawer": "^14.0.0",
    "@material/elevation": "^14.0.0",
    "@material/feature-targeting": "^14.0.0",
    "@material/form-field": "^14.0.0",
    "@material/menu-surface": "^14.0.0",
    "@material/ripple": "^14.0.0",
    "@material/rtl": "^14.0.0",
    "@material/select": "^14.0.0",
    "@material/shape": "^14.0.0",
    "@material/theme": "^14.0.0",
    "@material/typography": "^14.0.0",
    "@tylertech/forge-core": "^2.3.1",
    "@tylertech/tyler-icons": "^1.12.0",
    "imask": "^6.6.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.0.5",
    "@auto-it/first-time-contributor": "^11.0.5",
    "@auto-it/npm": "^11.0.5",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^3.1.8",
    "@tylertech-eslint/eslint-plugin": "^1.0.9",
    "@tylertech/forge-cli": "^3.0.0-next.4",
    "@tylertech/forge-testing": "^2.0.0",
    "@tylertech/stylelint-rules": "^4.3.4",
    "@types/jasmine": "^3.10.3",
    "@types/karma": "^6.3.3",
    "@types/karma-fixture": "^0.2.5",
    "@types/node": "^18.8.4",
    "@types/webpack-env": "^1.18.0",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/dev-server-rollup": "^0.5.0",
    "@web/test-runner": "^0.16.1",
    "@web/test-runner-junit-reporter": "^0.6.0",
    "@web/test-runner-playwright": "^0.10.1",
    "auto": "^11.0.5",
    "commitlint": "^17.6.3",
    "eslint-formatter-codeframe": "^7.32.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "karma-fixture": "^0.2.6",
    "npm-check-updates": "^16.10.12",
    "rollup-plugin-scss": "^4.0.0",
    "sinon": "^15.2.0",
    "stylelint": "^14.13.0",
    "typescript": "~4.9.5",
    "vite": "^4.3.5",
    "vite-plugin-ejs": "^1.6.4",
    "vite-plugin-full-reload": "^1.0.5",
    "vite-plugin-inspect": "^0.7.26",
    "vite-tsconfig-paths": "^4.2.0"
  }
}

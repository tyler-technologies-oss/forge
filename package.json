{
  "name": "@tylertech/forge",
  "version": "2.0.0-rc.3",
  "description": "Forge Web Components library",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyler-technologies/forge.git"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "cd src/stories && npm install",
    "build": "forge build",
    "build:all": "npm run build -- --all",
    "ci:build:all": "npm run build:all -- --threads 2",
    "start": "npm run storybook",
    "storybook": "cd src/stories && npm start",
    "lint": "forge lint",
    "test": "forge test",
    "test:once": "npm run test -- --once",
    "test:container": "forge test --once --no-sandbox",
    "ci:test": "forge test --once --ci --no-coverage",
    "ci:build-storybook": "cd src/stories && npm run ci:build",
    "ci:package": "tar -czvhf dist/deployment-assets.tar.gz -C dist/cdn .",
    "serve:demo": "forge serve",
    "serve:coverage": "http-server -c 1 -o -p 9875 dist/coverage/html",
    "changelog": "auto changelog",
    "release": "auto shipit --base-branch main",
    "postversion": "cd dist/release/@tylertech/forge && npm version $npm_package_version --no-git-tag-version --no-commit-hooks --ignore-scripts",
    "outdated-deps": "npm-check-updates --format repo --peer",
    "update-deps": "npm-check-updates --peer -u && npm install && npm run lint"
  },
  "dependencies": {
    "@tylertech/forge-core": "^2.0.0-rc.1",
    "@tylertech/tyler-icons": "^1.12.0",
    "imask": "^6.4.2",
    "material-components-web": "^14.0.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^10.36.5",
    "@auto-it/first-time-contributor": "^10.36.5",
    "@auto-it/npm": "^10.36.5",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@tylertech-eslint/eslint-plugin": "^1.0.8",
    "@tylertech/forge-cli": "^2.0.0-rc.3",
    "@tylertech/forge-testing": "^2.0.0-rc.0",
    "@tylertech/stylelint-rules": "^4.0.0",
    "@types/jasmine": "^3.10.3",
    "@types/karma": "^6.3.3",
    "@types/karma-fixture": "^0.2.5",
    "@types/node": "^14.14.41",
    "@types/webpack-env": "^1.16.3",
    "auto": "^10.36.5",
    "commitlint": "^16.2.3",
    "http-server": "^14.1.0",
    "husky": "^7.0.4",
    "karma-fixture": "^0.2.6",
    "npm-check-updates": "^13.0.0",
    "stylelint": "^14.6.1",
    "typescript": "~4.6.3"
  }
}

{
  "name": "@tylertech/forge",
  "version": "2.13.2",
  "description": "Forge Web Components library",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyler-technologies-oss/forge.git"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "cd src/stories && npm install",
    "build": "forge build",
    "start": "vite serve src/dev",
    "storybook": "cd src/stories && npm start",
    "lint": "forge lint",
    "test": "forge test",
    "test:once": "npm run test -- --once",
    "test:container": "forge test --once --no-sandbox",
    "ci:test": "forge test --once --ci --no-coverage",
    "ci:build-storybook": "cd src/stories && npm run ci:build",
    "ci:package": "tar -czvhf dist/deployment-assets.tar.gz -C dist/cdn .",
    "serve:coverage": "http-server -c 1 -o -p 9875 dist/coverage/html",
    "changelog": "auto changelog",
    "release": "auto shipit",
    "postversion": "cd dist/release/@tylertech/forge && npm version $npm_package_version --no-git-tag-version --no-commit-hooks --ignore-scripts",
    "outdated-deps": "npm-check-updates --format repo --peer",
    "update-deps": "npm-check-updates --peer -u && npm install && npm run lint"
  },
  "dependencies": {
    "@tylertech/forge-core": "^2.1.0",
    "@tylertech/tyler-icons": "^1.12.0",
    "imask": "^6.4.3",
    "material-components-web": "^14.0.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^10.37.6",
    "@auto-it/first-time-contributor": "^10.37.6",
    "@auto-it/npm": "^10.37.6",
    "@auto-it/slack": "^10.37.6",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@tylertech-eslint/eslint-plugin": "^1.0.9",
    "@tylertech/forge-cli": "^2.3.1",
    "@tylertech/forge-testing": "^2.0.0",
    "@tylertech/stylelint-rules": "^4.3.4",
    "@types/jasmine": "^3.10.3",
    "@types/karma": "^6.3.3",
    "@types/karma-fixture": "^0.2.5",
    "@types/node": "^18.8.4",
    "@types/webpack-env": "^1.18.0",
    "auto": "^10.37.6",
    "commitlint": "^17.1.2",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "karma-fixture": "^0.2.6",
    "npm-check-updates": "^16.3.11",
    "stylelint": "^14.13.0",
    "typescript": "~4.6.3",
    "vite": "^4.0.4",
    "vite-plugin-ejs": "^1.6.4",
    "vite-plugin-full-reload": "^1.0.5",
    "vite-plugin-inspect": "^0.7.14",
    "vite-tsconfig-paths": "^4.0.5"
  }
}

{
  "root": true,
  "ignorePatterns": [
    "dist/**/*",
    "docs/**/*",
    "plugins/**/*",
    "src/demo/**/*",
    "src/test/**/*",
    "src/stories/**/*",
    "web-test-runner.*",
    "custom-elements-manifest.config.mjs",
    "plopfile.mjs",
    "*.spec.ts",
    "*.test.ts"
  ],
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json"],
        "tsconfigRootDir": ".",
        "createDefaultProgram": true
      },
      "extends": ["plugin:@tylertech-eslint/recommended", "plugin:prettier/recommended"],
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "endOfLine": "auto"
          }
        ]
      }
    }
  ]
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["es2022", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitThis": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@tylertech/forge": ["src/lib"],
      "@tylertech/forge/*": ["src/lib/*"]
    }
  },
  "exclude": ["dist", "docs"]
}

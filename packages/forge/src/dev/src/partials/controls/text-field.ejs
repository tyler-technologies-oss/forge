<forge-text-field>
  <% if (control.label) { %>
    <label for="<%= control.id %>"><%= control.label %></label>
  <% } %>
  <input
    type="<%= control.inputType ?? 'text' %>"
    id="<%= control.id %>"
    min="<%= control.min %>"
    max="<%= control.max %>"
    step="<%= control.step %>"
    autocomplete="off"
    value="<%= control.defaultValue ?? undefined %>" />
</forge-text-field>

{
  "name": "@tylertech/forge",
  "version": "3.13.1",
  "description": "Tyler Forgeâ„¢ Web Components library",
  "license": "Apache-2.0",
  "author": "Tyler Technologies, Inc.",
  "keywords": [
    "tyler forge",
    "web components",
    "custom elements"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyler-technologies-oss/forge.git",
    "directory": "packages/forge"
  },
  "type": "module",
  "main": "esm/index.js",
  "module": "esm/index.js",
  "typings": "esm/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/lib/index.ts",
      "types": "./esm/index.d.ts",
      "default": "./esm/index.js"
    },
    "./*": {
      "development": "./src/lib/*/index.ts",
      "types": "./esm/*/index.d.ts",
      "default": "./esm/*/index.js"
    },
    "./custom-elements.json": {
      "default": "./custom-elements.json"
    },
    "./package.json": {
      "default": "./package.json"
    }
  },
  "customElements": "custom-elements.json",
  "files": [
    "esm/",
    "dist/",
    "sass/",
    "custom-elements.json",
    "vscode.*.json"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "vite src/dev",
    "storybook": "pnpm run cem && storybook dev -p 6006",
    "build:storybook": "pnpm run cem && storybook build",
    "lint": "eslint . && stylelint \"src/lib/**/*.{css,scss}\"",
    "setup:playwright": "playwright install --with-deps chromium",
    "test": "vitest run --browser.headless",
    "vitest": "vitest",
    "cdn-pack": "tar -czvhf cdn/deployment-assets.tar.gz -C cdn .",
    "cem": "custom-elements-manifest analyze --config custom-elements-manifest.config.js",
    "format": "prettier --write \"**/*.{ts,js,html,md,mdx,css,scss,yaml,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,md,mdx,css,scss,yaml,json}\"",
    "generate:component": "plop component",
    "generate:tokens": "plop tokens"
  },
  "dependencies": {
    "@floating-ui/dom": "catalog:",
    "@lit/context": "catalog:",
    "@tylertech/forge-core": "workspace:",
    "@tylertech/tyler-icons": "catalog:",
    "imask": "^7.6.1",
    "lit": "catalog:",
    "tslib": "catalog:"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "catalog:",
    "@rollup/plugin-typescript": "^12.3.0",
    "@storybook/addon-a11y": "catalog:",
    "@storybook/addon-docs": "catalog:",
    "@storybook/addon-links": "catalog:",
    "@storybook/addon-themes": "catalog:",
    "@storybook/web-components-vite": "catalog:",
    "@tylertech-eslint/eslint-plugin": "catalog:",
    "@tylertech/stylelint-rules": "catalog:",
    "@types/cssbeautify": "^0.3.5",
    "@types/node": "catalog:",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vueless/storybook-dark-mode": "catalog:",
    "@wc-toolkit/jsdoc-tags": "^1.1.0",
    "axe-core": "^4.11.1",
    "cssbeautify": "^0.3.1",
    "custom-element-vs-code-integration": "^1.5.0",
    "esbuild": "^0.27.3",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-storybook": "catalog:",
    "glob": "catalog:",
    "lit-html": "^3.3.2",
    "minimatch": "^10.2.1",
    "ora": "^9.3.0",
    "playwright": "catalog:",
    "plop": "catalog:",
    "prettier": "catalog:",
    "react-ga4": "^2.1.0",
    "remark-gfm": "^4.0.1",
    "rollup": "^4.57.1",
    "sass": "catalog:",
    "storybook": "catalog:",
    "storybook-addon-tag-badges": "catalog:",
    "stylelint": "catalog:",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "catalog:",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-full-reload": "^1.2.0",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "^4.0.18",
    "vitest-browser-lit": "^1.0.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
